// Fig. 2.15: Comparison.java
// Compare integers using if statements, relational operators 
// and equality operators.

//import java.io.*;
import java.util.*;
import java.lang.*;

public class Comparison 
{
   // main method begins execution of Java application
   public static void main(String[] args)
   {
      // create Scanner to obtain input from command line
	  Scanner br = new Scanner(System.in);

      String str1; // first number to compare
      String str2; // second number to compare
      char chr, chrWhiteSpace = ' ';
      Boolean isThisWhiteSpace;
      
      System.out.println("Enter first word: "); // prompt 
      str1 = br.nextLine(); // read first number from user 

      System.out.print("Enter second word: "); // prompt 
      str2 = br.nextLine(); // read second number from user 
      
      if (str1.equals(str2)) {
    	 System.out.println("True");
         System.out.printf("%s == %s%n", str1, str2);
      } else {
    	  System.out.println("Strings not equal");
      }
      
      // The form feed character is considered whitespace by the C character classification function
      // In Java the escape sequence for it is \f and is used for page break delimiters
      System.out.print("Enter a single char: ");
      chr = br.next().charAt(0);
      
      isThisWhiteSpace = Character.isWhitespace(chr);
      if (isThisWhiteSpace) {
    	  System.out.printf("'%c' is a string literal or char of value whitespace\n", chr);
      } else {
    	  System.out.printf("'%c' is a string literal or char of value NOT whitespace\n", chr);
      }
      
      isThisWhiteSpace = Character.isWhitespace(chrWhiteSpace);
      if (isThisWhiteSpace) {
    	  System.out.printf("'%c' is a string literal or char of value whitespace\n", chrWhiteSpace);
      } else {
    	  System.out.printf("'%c' is a string literal or char of value NOT whitespace\n", chrWhiteSpace);
      }
      br.close();
   } // end method main
} // end class Comparison

